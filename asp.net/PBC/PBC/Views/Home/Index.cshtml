@{
    ViewData["Title"] = "Home Page";
    //create css link
    <link href="@Url.Content("~/css/style.css")" rel="stylesheet" />
    <link href="@Url.Content("~/css/home.css")" rel="stylesheet" />
}

<!-- FIRST SECTION -->
<section id="first-section">
    <!-- // create slider with 2 images and width with 100% of first section -->

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="images/homepage-firstSection-img.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="images/homepage-firstSection-img2.jpg" alt="Second slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only fw-bold">Previous</span>
        </a>
        <a class="carousel-control-next fw-bold" href="#carouselExampleControls" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>


</section>
<!-- END SECOND SECTION -->
<!-- THIRD SECTION -->
<section class="bg-white" id="third-section">
    <div class="container py-5">
        <div class="text-center bg-secondary py-5 mb-4" id="third-section-header">
            <span class="display-3">Trending Products</span>
        </div>
        <div class="row pb-5" id="products">
        </div>
    </div>
</section>
<!-- END THIRD SECTION  -->
<!-- FOURTH SECTION -->
<section id="fourth-section">
    <div class="container">
        <div class="row d-flex justify-content-center border border-2 m-5 py-3 text-white">
            <div class="row">
                <span class="text-center"><i class="bi bi-envelope-open fs-1"></i></span>
            </div>
            <div class="row text-center">
                <span class="h3 text-capitalize">sign up for newsletter</span>
                <span class="lead">Sign up with us and get latest deals, offers & updates about store.</span>
            </div>
            <div class="row d-flex justify-content-center pt-4">
                <div class="col-md-4">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Search for..."
                               aria-label="Recipient's username" aria-describedby="button-addon2">
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button"
                                    id="button-addon2">
                                Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</section>
<!-- END FOURTH SECTION -->
<!-- FIFTH SECTION -->
<section class="bg-white" id="fifth-section">
    <div class="container py-5">
    </div>
</section>
<!-- END FIFTH SECTION -->
@section Scripts{
    @{
        <script src="~/js/products.js"></script>
    }
}